name: Build and scp to server
"on":
  push:
    branches:
      - main
jobs:
  build_and_scp:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: "16.x"
      - run: npm ci
      - run: npm run build

      - name: create secrets key.txt
        run: node create-file-with-content-from-env.js file=key.txt dir=secrets envKey=SECRET_KEY_TXT
        env:
          SECRET_KEY_TXT: ${{secrets.SECRET_KEY_TXT}}

      - uses: appleboy/scp-action@v0.1.4
        with:
          host: ${{ secrets.SERVER_HOST }}
          username: ${{ secrets.SERVER_USERNAME }}
          password: ${{ secrets.SERVER_PASSWORD }}
          source: "dist/*,package.*,ecosystem.*,config.json, secrets/*, enc.env, env/*"
          target: /home/ubuntu/docker-pull-auto
          overwrite: true

      - name: Run sshpass commands
        uses: matheusvanzan/sshpass-action@v2
        with:
          host: ${{ secrets.SERVER_HOST }}
          user: ${{ secrets.SERVER_USERNAME }}
          pass: ${{ secrets.SERVER_PASSWORD }}
          run: |
            cd /home/ubuntu/docker-pull-auto
            npm i --omit=dev
            npm run pm2:start:dev